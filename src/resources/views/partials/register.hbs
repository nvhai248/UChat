<div
  class="card-body mt-5 ms-5 me-5 shadow-lg bg-body rounded displayNone"
  style="height: 88%; overflow: hidden;"
  id="register-form"
>
  <div class="row mb-5">
    <h1 class="card-title text-center bolder">REGISTER</h1>
  </div>

  <div class="row mb-3 text-center">
    <a
      class="col-5 btn btn-outline-primary shadow-lg rounded-pill btn-lg"
      type="button"
      id="ctnGoogle"
      href="/auth/google"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        fill="currentColor"
        class="bi bi-google"
        viewBox="0 0 16 16"
      >
        <path
          d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z"
        ></path>
      </svg>
      Google</a>
    <div class="col-2"><hr class="align-self-center" /></div>
    <a
      class="col-5 btn btn-outline-primary shadow-lg rounded-pill btn-lg"
      type="button"
      id="ctnFacebook"
      href="/auth/facebook"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        fill="currentColor"
        class="bi bi-facebook"
        viewBox="0 0 16 16"
      >
        <path
          d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"
        ></path>
      </svg>
      Facebook</a>

  </div>

  <div class="row text-center">
    <hr class="col-5" />
    <p class="col-2"> OR</p>
    <hr class="col-5" />
  </div>

  <form id="RForm" action="/register" method="POST">
    <div class="row mb-3">
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          id="nameReg"
          placeholder="name@example.com"
          name="name"
        />
        <label for="nameReg ms-3">Full name</label>
      </div>
    </div>

    <div class="row mb-3">
      <div class="form-floating">
        <input
          type="email"
          class="form-control"
          id="emailReg"
          placeholder="name@example.com"
          name="email"
        />
        <label for="emailReg ms-3">Email address</label>
      </div>
    </div>

    <div class="row mb-2">
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          id="passwordReg"
          placeholder="name@example.com"
          name="password"
        />
        <label for="passwordReg ms-3">Password</label>
      </div>
    </div>

    <div class="row mb-5">
      <p class="text-danger" id="messageRegister">{{messageRegister}}</p>
    </div>

    <div style="float:inline-end">
      <div class="row mb-3">
        <button
          class="btn btn-primary rounded-pill btn-lg"
          type="submit"
          id="registerBtn"
        >Register</button>
      </div>
    </div>
  </form>

  <div class="row text-center">
    <p>Already have an account?<a
        href="#"
        id="goto-login"
        onclick="switchDiv()"
      >Login</a></p>
  </div>

</div>